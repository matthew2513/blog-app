<%- include("../partials/header.ejs") %>

<main class="container">
  <div class="bg-dark p-5 rounded shadow">
    <form
      action="<%= isEdit ? `/posts/${article.id}/update` : '/posts/submit' %>"
      method="post"
    >
      <div class="form-floating mb-3">
        <input
          type="text"
          class="form-control"
          id="title"
          name="title"
          placeholder="Title"
          value="<%= article.title || '' %>"
          required
        />
        <label for="title">Title</label>
      </div>
      <% if (!isEdit) { %>
      <div class="form-floating mb-3">
        <input
          type="text"
          class="form-control"
          id="author"
          name="author"
          placeholder="Author"
          required
        />
        <label for="author">Author</label>
      </div>
      <% } %>
      <div class="form-floating mb-3">
        <input
          type="text"
          class="form-control"
          id="description"
          name="description"
          placeholder="Description"
          value="<%= article.description || '' %>"
          required
        />
        <label for="description">Description</label>
      </div>
      <div class="form-floating">
        <textarea
          class="form-control"
          placeholder="Write the content here."
          id="content"
          style="height: 150px"
          name="content"
          required
        >
<%= article.content || '' %></textarea
        >
        <label for="content">Content</label>
      </div>
      <div class="d-flex gap-2 justify-content-start py-5">
        <input
          class="btn d-inline-flex align-items-center <%= isEdit ? 'btn-success' : 'btn-primary' %>"
          type="submit"
          value="<%= isEdit? 'Update' : 'Submit' %>"
        />
        <a
          href="/posts/blog"
          class="btn btn-outline-secondary d-inline-flex align-items-center"
        >
          Cancel
        </a>
      </div>
    </form>
  </div>
</main>

<%- include("../partials/footer.ejs") %>
